# Mod reqrite
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# -------------------------------------------------------------
# 1. Force HTTPS (optional but recommended)
# -------------------------------------------------------------
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# -------------------------------------------------------------
# 2. Preserve Authorization header (required for REST APIs)
#    - Ensures Bearer Token / Basic Auth / JWT headers are passed to PHP
#    - Must appear before routing rules
# -------------------------------------------------------------
RewriteCond %{HTTP:Authorization} .
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

# -------------------------------------------------------------
# 3. Prevent rewrite loops when requesting index.php directly
# -------------------------------------------------------------
RewriteRule ^index\.php$ - [L]

# -------------------------------------------------------------
# 4. If the requested file or directory exists, serve it directly
#    - Ensures access to PHP tools like make_install.php
#    - Ensures access to assets (css/js/img/etc)
# -------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# -------------------------------------------------------------
# 5. All other requests are routed into index.php
#    - This is the core router, similar to WordPress behavior
# -------------------------------------------------------------
RewriteRule . /index.php [L]

</IfModule>
# Error handling
ErrorDocument 404 /404/
ErrorDocument 500 /

# Performance settings
<IfModule mod_headers.c>
  <filesMatch "\.(css|js)$">
Header set Cache-Control "max-age=604800, proxy-revalidate"
</filesMatch>
<FilesMatch "\.(js|css|xml|gz)$">
    Header append Vary: Accept-Encoding
  </FilesMatch>
  <FilesMatch ".(flv|gif|jpg|jpeg|png|ico|swf|pdf)$">
Header set Cache-Control "max-age=604800"
</FilesMatch>

</IfModule>

<IfModule mod_deflate.c>
    SetOutputFilter DEFLATE
    <IfModule mod_setenvif.c>
        # Netscape 4.x has some problems...
        BrowserMatch ^Mozilla/4 gzip-only-text/html

        # Netscape 4.06-4.08 have some more problems
        BrowserMatch ^Mozilla/4\.0[678] no-gzip

        # MSIE masquerades as Netscape, but it is fine
        # BrowserMatch \bMSIE !no-gzip !gzip-only-text/html

        # NOTE: Due to a bug in mod_setenvif up to Apache 2.0.48
        # the above regex won't work. You can use the following
        # workaround to get the desired effect:
        BrowserMatch \bMSI[E] !no-gzip !gzip-only-text/html

        # Don't compress images
        SetEnvIfNoCase Request_URI .(?:gif|jpe?g|png)$ no-gzip dont-vary
    </IfModule>

    <IfModule mod_headers.c>
        # Make sure proxies don't deliver the wrong content
        Header append Vary User-Agent env=!dont-vary
    </IfModule>
</IfModule>

